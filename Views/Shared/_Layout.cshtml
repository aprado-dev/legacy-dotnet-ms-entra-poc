<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVC Demo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <header>
            <h1>MVC Demo - .NET Framework 4.8</h1>
            @if (Request.IsAuthenticated)
            {
                <nav class="user-nav">
                    <span class="user-name">@User.Identity.Name</span>
                    <a href="@Url.Action("SignOut", "Account")" class="btn-logout">Sair</a>
                </nav>
            }
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <p>&copy; @DateTime.Now.Year - MVC Demo Application</p>
        </footer>
    </div>
</body>
</html>
